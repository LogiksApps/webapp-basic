{
	"hooks": {
		"preload": {
			"helpers": ["countries"]
		}
	},
	"postsubmit": {},
	"source": {
		"type": "sql",
		"table": "lgks_users",
		"where": ["userid"]
	},
	"forcefill": {
		"userid": "#SESS_USER_ID#",
        "privilegeid":"#SESS_PRIVILEGE_ID#",
        "guid":"#SESS_GUID#"
	},
	"fields": {
		"email": {
			"label": "E-mail",
			"type": "email",
			"required": true
		},
		"userid": {
			"label": "Login ID",
			"disabled": true
		},
		"name": {
			"label": "Full Name"
		},
		"mobile": {
			"label": "Mobile"
		},
		"remarks": {
			"label": "Description\/Notes",
			"type": "textarea",
			"width": "12"
		},
		"address": {
			"label": "Address",
			"group": "address"
		},
		"avatar_type": {
			"label": "Avatar Type",
			"group": "Logos",
		    "type": "select",
			"options":{
			    "":"Select Avatar Type",
			    "facebook":"Facebook",
			    "google": "Google+",
			    "twitter": "Twitter",
			    "linkedin": "Linkedin"
			},
			"required": true
		},
		"country": {
			"label": "Country",
			"group": "address",
			"type": "dataMethod",
			"method": {
				"name": "getCountrySelector",
				"valuefield": "default"
			},
			"required": true
		},
		"region": {
			"label": "Region/State",
			"group": "address"
		},
		"zipcode": {
			"label": "Zipcode/PIN Code",
			"group": "address"
		},
		"gender": {
			"label": "Gender",
			"group": "address",
			"type": "select",
			"options": {
				"": false,
				"male": "Male",
				"female": "Female"
			}
		},
		"avatar":{
			"label":"Avatar",
			"type":"text",
			"group":"Logos"
		}
	}
}